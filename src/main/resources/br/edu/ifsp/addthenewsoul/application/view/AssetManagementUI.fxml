            <TableColumn fx:id="cEmployeeInCharge" prefWidth="165.0" text="EMPLOYEE IN CHARGE" />
            <TableColumn fx:id="cValue" prefWidth="66.0" text="VALUE" />
            <TableColumn fx:id="cDamage" prefWidth="66.0" text="DAMAGE" />
